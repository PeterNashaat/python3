count = 0
password= "2y7aga"
while count < 3:
    input_password = input("enter your password:")
    if input_password == password:
        print("Authorized ya prince")
        break
    else :
        print("denied")
        count += 1

import getpass
password = "7amada"
while count < 3:
    input_password = getpass.getpass(prompt='Please enter your Password')
    if input_password == password :
        print("Authorized")
        break
    else :
        print("Denied")
        count += 1
